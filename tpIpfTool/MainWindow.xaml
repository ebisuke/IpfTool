<Window x:Class="tpIpfTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="476" Width="424" AllowDrop="True" FontFamily="MS Gothic" PreviewDragOver="Window_PreviewDragOver" Drop="Window_Drop" MinWidth="400">
	<Grid>
		<ScrollViewer Margin="0,0,0,38">
			<TextBox x:Name="txtOutput"  Margin="0" TextWrapping="Wrap" Text="{Binding logtxt}" IsReadOnly="True" />
		</ScrollViewer>
		<TextBlock HorizontalAlignment="Left" Margin="57,0,0,13" TextWrapping="Wrap" Text="TargetVer" Height="12" VerticalAlignment="Bottom"/>
		<TextBox HorizontalAlignment="Left" Margin="116,0,0,10" TextWrapping="Wrap" Text="{Binding tgtver}" Width="80" Height="23" VerticalAlignment="Bottom" FontSize="18px" TextAlignment="Right"/>
		<TextBlock Margin="0,0,104,13" TextWrapping="Wrap" Text="PackagetVer" Height="12" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="66"/>
		<TextBox HorizontalAlignment="Right" Margin="0,0,19,10" TextWrapping="Wrap" Text="{Binding pkgver}" Width="80" Height="23" VerticalAlignment="Bottom" FontSize="18px" TextAlignment="Right"/>

	</Grid>
</Window>
